@model TextboxBook.UI.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/_Layout.cshtml";
}

<div>
    <div class="container">
        <form class="col-md-8 mx-auto" asp-controller="account" asp-action="register" method="post">

            <div class="form-group">
                <input type="text" asp-for="@Model.Name" placeholder="Name" class="form-control" />
                <span asp-validation-for="@Model.Name"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="@Model.Surname" placeholder="Surname" class="form-control" />
                <span asp-validation-for="@Model.Surname"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="@Model.Age" placeholder="Age" class="form-control" />
                <span asp-validation-for="@Model.Age"></span>
            </div>
            <div class="form-group">
                <select asp-for="@Model.GenderId" class="form-control"
                        asp-items="@(new SelectList(Model.Gender,"Id","Name"))"></select>
            </div>
            <div class="form-group">
                <select asp-for="@Model.CountryId" class="form-control"
                        asp-items="@(new SelectList(Model.Country,"Id","Name"))"></select>
            </div>
            <div class="form-group">
                <input type="text" asp-for="@Model.EMail" placeholder="E-Mail" class="form-control" />
                <span asp-validation-for="@Model.EMail"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="@Model.Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="@Model.Password"></span>
            </div>
            <div class="form-group text-right">
                <button class="btn btn-success">Register</button>
            </div>
        </form>
    </div>
</div>