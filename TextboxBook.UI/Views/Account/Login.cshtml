@model TextboxBook.UI.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container my-5">
    <div class="row">
        <form asp-controller="account" asp-action="login" method="post" class="mx-auto border rounded-lg col-md-6">
            <div class="mx-auto p-5">
                <h3 class="border-bottom">Login for continue</h3>
                <div class="form-group mt-3">
                    <label asp-for="EMail">Email address</label>
                    <input asp-for="EMail" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    <span asp-validation-for="EMail"></span>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <span asp-validation-for="EMail"></span>

                </div>
                <button type="submit" class="btn btn-primary col-md-12">Login</button>
                <div class="text-center mt-3">
                    <a href="/account/register">
                        New to Textbox E-Book? Join now

                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
