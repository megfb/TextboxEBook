@model TextboxBook.UI.Models.CommentHistoryViewModel
@{
    ViewData["Title"] = "CommentsList";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <td class="col listebasligi text-center">Comment's</td>

                        <td class="col listebasligi text-center">Id</td>
                        <td class="col listebasligi text-center">Book Id</td>
                        <td class="col listebasligi text-center">User Id</td>
                        <td class="col listebasligi text-center">Name</td>
                        <td class="col listebasligi text-center">Show</td>
                        <td class="col text-center listebasligi">Delete</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var commentList in Model.Comments)
                    {
                        <tr class="text-center">
                            <td class=" align-middle">
                                <p class="listeyazisi text-center">@commentList.CommentName</p>
                            </td>

                            <td class=" align-middle">
                                <p class="listeyazisi text-center">@commentList.Id</p>
                            </td>
                            <td class=" align-middle">
                                <p class="listeyazisi text-center">@commentList.BookId</p>
                            </td>
                            <td class=" align-middle">
                                <p class="listeyazisi text-center">@commentList.UserId</p>
                            </td>

                            <td class=" align-middle">
                                <p class="listeyazisi text-center">@commentList.UserName</p>
                            </td>

                            <td class="align-middle">
                                <a class="btn btn-primary" asp-controller="book" asp-action="detail" asp-route-Id="@commentList.BookId">Show</a>
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-danger" asp-controller="profile" asp-action="deletecomment" asp-route-Id="@commentList.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>