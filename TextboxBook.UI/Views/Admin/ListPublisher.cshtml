@model TextboxBook.UI.Models.PublisherListViewModel
@{
    ViewData["Title"] = "ListPublisher";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class=" table-responsive mx-auto">

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col" class="listebasligi text-center">Id</th>
                        <th scope="col" class="listebasligi text-center">Name</th>
                        <th scope="col" class="listebasligi text-center">Informations</th>
                        <th scope="col" class="listebasligi text-center">Edit</th>
                        <th scope="col" class="listebasligi text-center">Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var publisherList in Model.Publisher)
                    {
                        <tr class="text-center ">
                            <td class="align-middle">
                                <p class="listeyazisi">@publisherList.Id</p>
                            </td>

                            <td class="align-middle">
                                <p class="listeyazisi text-center">@publisherList.Name</p>
                            </td>
                            <td class="align-middle">
                                <a asp-controller="admin" asp-action="DetailPublisher" asp-route-Id="@publisherList.Id" class="btn btn-xs btn-primary"> Details</a>
                            </td>
                            <td class="align-middle">
                                <a asp-controller="admin" asp-action="editpublisher" asp-route-Id="@publisherList.Id" class="btn btn-xs btn-warning"> Edit</a>
                            </td>
                            <td class="align-middle">
                                <a asp-controller="admin" asp-action="DeletePublisher" asp-route-Id="@publisherList.Id" class="btn btn-xs btn-danger"> Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <a type="button" class="btn btn-info" asp-action="AddPublisher">New Publisher</a>
            </div>
        </div>

    </div>

</div>
