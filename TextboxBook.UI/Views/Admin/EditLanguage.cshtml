@model TextboxBook.UI.Models.LanguageEditViewModel
@{
    ViewData["Title"] = "EditLanguage";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto my-3">
            <form asp-controller="admin" asp-action="editlanguage" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Language.Name" placeholder="Language" />
                    <span asp-validation-for="Language.Name"></span>
                </div>
                <div class="text-right">
                    <input type="hidden" asp-for="Language.Id" />
                    <a asp-action="listlanguage" class="btn btn-info rounded-pill col-md-3">Languages</a>
                    <input type="submit" class="btn btn-success col-md-3 rounded-pill" value="Update" />
                </div>
            </form>
        </div>
    </div>

</div>