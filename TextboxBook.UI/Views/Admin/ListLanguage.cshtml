@model TextboxBook.UI.Models.LanguageListViewModel
@{
    ViewData["Title"] = "ListLanguage";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">

    <div class="row">
        <div class=" table-responsive mx-auto">

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col" class="listebasligi text-center">Id</th>
                        <th scope="col" class="listebasligi text-center">Language</th>
                        <th scope="col" class="listebasligi text-center">Informations</th>
                        <th scope="col" class="listebasligi text-center">Edit</th>
                        <th scope="col" class="listebasligi text-center">Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var langList in Model.Language)
                    {
                        <tr class="text-center ">
                            <td class="align-middle">
                                <p class="listeyazisi">@langList.Id</p>
                            </td>

                            <td class="align-middle">
                                <p class="listeyazisi text-center">@langList.Name</p>
                            </td>
                            <td class="align-middle">
                                <a asp-controller="admin" asp-action="DetailLanguage" asp-route-Id="@langList.Id" class="btn btn-xs btn-primary"> Details</a>
                            </td>
                            <td class="align-middle">
                                <a asp-controller="admin" asp-action="EditLanguage" asp-route-Id="@langList.Id" class="btn btn-xs btn-warning"> Edit</a>
                            </td>
                            <td class="align-middle">
                                <a asp-controller="admin" asp-action="DeleteLanguage" asp-route-Id="@langList.Id" class="btn btn-danger"> Delete</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <a type="button" class="btn btn-info" asp-action="AddLanguage">New Language</a>
            </div>
        </div>

    </div>

</div>
