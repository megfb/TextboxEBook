@model TextboxBook.UI.Models.AuthorViewModel
@{
    ViewData["Title"] = "DetailAuthor";
    Layout = "~/Views/_Layout.cshtml";
    <link rel="stylesheet" type="text/css" href="~/css/DetailAuthor.css" />

}


<div class="container-fluid my-5">
    <div class="row">

        <div class="col-md-12">
            <form class="col-md-6 mt-5 border rounded-lg py-3 mx-auto">
                <div class="row border-bottom mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <img class="img-fluid mx-auto d-block" width="192" src="@Model.Author.AuthorImg" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group border-bottom">
                            <label asp-for="Author.Name" class="d-inline"><b>Name:</b></label>

                            <label asp-for="Author.Name">@Model.Author.Name</label>
                        </div>
                        <div class="form-group border-bottom">
                            <label asp-for="Author.BirthDate" class="d-inline"><b>Birth Date:</b></label>
                            <label asp-for="Author.BirthDate" class="d-inline">@Model.Author.BirthDate</label>
                        </div>
                        <div class="form-group border-bottom">
                            <label asp-for="Author.Biography" class="d-inline"><b>Bio:</b></label>
                            <label asp-for="Author.Biography" class="d-inline">@Model.Author.Biography</label>

                        </div>
                    </div>
                </div>
                <a type="button" asp-action="list" value="Back" class="btn btn-info rounded-pill text-white ml-auto d-block col-md-4">Back</a>

            </form>
            <div class="row">



                <div class="row col-md-8 mx-auto bg-white my-5 rounded-lg border-bottom">
                    <div class=" baslik mt-3">
                        <p class="basliktext">Author's Books</p>
                    </div>
                    <div class="row mx-auto col-md-12 mt-3">

                        @foreach (var books in Model.Author.Book)
                        {

                            <div class="col-md-3 urundiv pb-3">
                                <div class="col-md-12 mx-auto py-3 yeniurun  bg-white">
                                    <div class="row col-md-12 mb-3 mx-auto">

                                        <a href="#" class="mx-auto">
                                            <div class="col-md-12">
                                                <img src="@books.BookImg" />
                                                <p class="urunadi">
                                                    <b class="urunadi">@books.Name</b>
                                                </p>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="row col-md-12 mx-auto">
                                        <a asp-controller="book" asp-action="detail" asp-route-Id="@books.Id" class="btn rounded-lg text-center btn-xs col-md-6 ml-auto d-block btn-outline-primary">Details</a>
                                    </div>
                                </div>
                            </div>

                        }

                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

