@model TextboxBook.UI.Models.MyProfileViewModel
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container">
    <form asp-controller="profile" asp-action="myprofile" class="col-md-8 mx-auto border rounded-lg p-3" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <input asp-for="User.Name" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <input asp-for="User.Surname" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <input asp-for="User.Age" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <select asp-for="User.GenderId" class="form-control" asp-items="@(new SelectList(Model.Genders,"Id","Name"))"></select>
        </div>
        <div class="form-group">
            <select asp-for="User.CountryId" class="form-control" asp-items="@(new SelectList(Model.Countrys,"Id","Name"))"></select>
        </div>
        <div class="form-group">
            <input asp-for="User.Email" class="form-control" type="email" />
        </div>
        <div class="text-right">


            <input type="hidden" asp-for="User.Id" />
            <a asp-controller="home" asp-action="index" class="col-md-3 btn btn-info rounded-pill">Back</a>
            <input type="submit" class="col-md-3 btn btn-success rounded-pill" value="Update">
        </div>
        <div class="text-right mt-3">
            <!-- Button trigger modal -->
            <a class="text-muted pr-3 btn" data-toggle="modal" data-target="#exampleModalCenter">
                Delete my account
            </a>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">

                        <div class="modal-body text-left">
                            <p class="h6">Are you sure?</p>
                            <p class="text-muted"><small>If you are click to "yes", this account will be delete.</small></p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-success" asp-controller="profile" asp-action="DeleteMyAccount">Yes</button>
                            <button type="button" class="btn btn-info" data-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>