@model TextboxBook.UI.Models.OrderHistoryViewModel
@{
    ViewData["Title"] = "OrderHistory";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <td class="listebasligi text-center">Id</td>
                        <td class="col listebasligi text-center">Full Name</td>
                        <td class="col text-center listebasligi">Email</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.OrderHistory)
                    {
                        <tr class="text-center">
                            <td class=" align-middle">
                                <p class="listeyazisi text-center">@order.Id</p>
                            </td>
                            <td class=" align-middle">
                                <p class="listeyazisi text-center">@order.Name  @order.Surname</p>
                            </td>
                            <td class=" align-middle">
                                <p class="listeyazisi text-center">@order.Email</p>
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-primary" asp-controller="order" asp-action="detail" asp-route-Id="@order.Id">Show</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>